<%- include('./partials/head', { title:'Login', hojaCss:'styles-login'}) %>
<%- include('./partials/header') %>
    <main>
        <section class="main-title">
            <h3 class="create-account">Iniciar sesión</h3>
            <div class="style-bar1"></div>
        </section>
        <section class="form-section">
            <form action="/login" method="POST" class="form">
                <label for="email">Email</label>
                <input class= '<%= locals.errors && errors.email ? "error-border": ""%>' type="email" id="email" name="email" value="<%= locals.old && old.email %>">
                <% if (locals.errors && errors.email) { %>
                    <p class="error-msg"><%= errors.email.msg%></p>
                <% } %>
               
                <label for="password">Contraseña</label>
                <input class= '<%= locals.errors && errors.password ? "error-border": ""%>' type="password" id="password" name="password" value="<%= locals.old && old.password %>">
                <% if (locals.errors && errors.password) { %>
                    <p class="error-msg"><%= errors.password.msg%></p>
                <% } %>
                <div class="col-md-6 my-2">
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input type="checkbox" class="form-check-input" name="remember_user">Recordar mi usuario
                        </label>
                    </div>
                </div>
                <a href="/retrieve-Acount" >¿Has olvidado tu contraseña?</a>
                <a href="/register" >Registrarse</a>
                <button type="submit">Iniciar Sesión</button>
            </form>
            
        </section>
    </main>
<%- include('./partials/footer') %> 
    <script src="../js/prueba.js"></script>
    <script src="../js/formValidationLogin.js"></script>
</body>
</html>