<%- include('./partials/head', { title:'Register', hojaCss:'styles-register'}) %>
<%- include('./partials/header') %>
    <main>
        <section class="main-title">
            <h3 class="create-account">creá tu cuenta</h3>
            <div class="style-bar1"></div>
        </section>
        <section class="form-section">
            <form action="/register/" method="POST" enctype="multipart/form-data" class="form">
                <label for="name">Nobre de Usuario</label>
                <input class= '<%= locals.errors && errors.name ? "error-border": ""%>' type="text" id="name" name="name" value="<%= locals.old && old.name %>">
                <% if (locals.errors && errors.name) { %>
                    <p class="error-msg"><%= errors.name.msg%></p>
                <% } %>
                <label for="email">Email</label>
                <input class= '<%= locals.errors && errors.email || locals.emailError ? "error-border": ""%>' type="email" id="email" name="email" value="<%= locals.old && old.email %>">
                <% if (locals.errors && errors.email) { %>
                    <p class="error-msg"><%= errors.email.msg%></p>
                <% }else if (locals.emailError && emailError) { %>
                    <p class="error-msg"><%= emailError%></p>
                <% } %>
                <label for="Image">Imagen de Perfil</label>
                <input type="file" name="Image" id="Image" accept=".jpg, .png, .jpeg, .tif, .tiff" class="file-input">
                <div id="imagePreview"></div>
                <label for="tel">Número de Teléfono</label>
                <input class= '<%= locals.errors && errors.phone ? "error-border": ""%>' type="tel" id="tel" name="phone" value="<%= locals.old && old.phone %>">
                <% if (locals.errors && errors.phone) { %>
                    <p class="error-msg"><%= errors.phone.msg%></p>
                <% } %>
                <label for="password">Contraseña</label>
                <input class= '<%= locals.errors && errors.password ? "error-border": ""%>' type="password" id="password" name="password" value="<%= locals.old && old.password %>">
                <% if (locals.errors && errors.password) { %>
                    <p class="error-msg"><%= errors.password.msg%></p>
                <% } %>
                <button type="submit">Crear Cuenta</button>
            </form>
        </section>
    </main>
<%- include('./partials/footer') %> 
    <script src="../js/prueba.js"></script>
    <script src="../js/formValidationRegister.js"></script>
</body>

</html>